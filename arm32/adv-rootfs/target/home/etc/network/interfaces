# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)
 
# The loopback interface
source /etc/network/interfaces.d/lo

# Wireless interfaces
source /etc/network/interfaces.d/wlan0

#source /etc/network/interfaces.d/tiwlan0

# Wired or wireless interfaces

# eth0
source /etc/network/interfaces.d/eth0

# eth1
source /etc/network/interfaces.d/eth1

# eth2
source /etc/network/interfaces.d/eth2

# eth3
source /etc/network/interfaces.d/eth3

# Ethernet/RNDIS gadget (g_ether)
# ... or on host side, usbnet and random hwaddr
source /etc/network/interfaces.d/usb0

# Bluetooth networking
#source /etc/network/interfaces.d/bnep0

# bridge
source /etc/network/interfaces.d/br0

# ME3760
source /etc/network/interfaces.d/wwan0
